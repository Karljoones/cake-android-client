<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_layout_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/ImageDescription" />

    <TextView
        android:id="@+id/list_item_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/list_item_layout_image"
        android:layout_toRightOf="@id/list_item_layout_image"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_layout_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_layout_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/list_item_layout_image"
        android:layout_toRightOf="@id/list_item_layout_image" />

</RelativeLayout>